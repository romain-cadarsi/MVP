{% extends 'base.html.twig' %}

{% block bodycontent %}
    <section class="fullscreen" ><div class="parallax-container img-loaded" data-velocity="-.140"></div>
        <div class="container">
            <div>
                <div class="row card">
                    <div class="col-lg-5 center p-50 background-white b-r-6">
                        <form method="post">

                            <h1 class="h3 mb-3 font-weight-normal">Créer votre compte commercant</h1>
                            <label for="inputEmail">Email</label>
                            <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" required autofocus>
                            <label for="inputPassword">Telephone</label>
                            <input type="text" name="password" id="inputPassword" class="form-control" required>

                            <input type="hidden" name="_csrf_token"
                                   value="{{ csrf_token('authenticate') }}"
                            >

                            {#
                            Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
                            See https://symfony.com/doc/current/security/remember_me.html

                            <div class="checkbox mb-3">
                                <label>
                                    <input type="checkbox" name="_remember_me"> Remember me
                                </label>
                            </div>
                            #}

                            <button class="btn btn-lg btn-primary" type="submit">
                                Créer le compte
                            </button>
                        </form>
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </section>

{% endblock %}

{% block title %}Log in!{% endblock %}

{% block body %}

{% endblock %}
