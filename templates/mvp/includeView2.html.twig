<style>
    p,a,h1,h2,h3,label{
        font-family: Cabin !important;
    }
    span{
        font-family: Cabin;
    }

    .flickity-page-dots{
        z-index: 1000 !important;
    }
    .carousel img{
        height: 100% !important;
    }
    .carousel .polo-carousel-item{
        height: 100% !important;
    }

         .imagesParticipations::after{
             content: "{{campagne.nombreParticipations}}/{{campagne.nombreParticipants}}";
             position: absolute;
             color: #c6c9cd;
             right: 0;
             top: 10px;
             font-size: 13px;
             font-weight: 400;
         }

</style>
<img id="iphone" src="{{ asset('iphone.png') }}" alt="iphone" style="position:fixed;z-index: 100 ; height: 80vh">
<div id="layout" style="width: 700px; height: 500px;position: fixed;top: 35px;left: 43px; background-color : #D8D8D8;">
    <div style="height: 40%;width: 100%">
        <div id="preview-featured-image" style="width: 100%;height: 100%">
            <div class="carousel dots-inside arrows-visible arrows-only" data-items="1" data-loop="true" data-autoplay="true" data-lightbox="gallery" style="height: 100%">
                <img alt="" src="{{ asset(campagne.logo.asset) }}">
                {% for additionnal in campagne.imagesAdditionnelles %}
                    <img alt="" src="{{ asset(additionnal.asset) }}">
                {% endfor %}
            </div>
        </div>
        <img id="previewMethod" style="position: absolute;right: 15px;bottom: calc(60% + 15px); height: 60px ; width: auto">
    </div>
    <div style="background-color: #f9f9f9;border-radius: 30px 30px 0 0 ; width: 100% ; height: 60%;">
        <div style="padding: 10% 10%; z-index: 1000;">
            <img style="width: auto; height: 80px;position: absolute;right: 20px;top: 42%;"src="{{ asset('partager.png') }}">
            <h6 style="line-height: 0.1em;font-family: Cabin;font-style: normal;font-weight: 600;font-size: 15px;line-height: 0px;color: #979797;" id="vendeurPreview"> {{ campagne.nomVendeur }}</h6>
            <h3 style="width : 80%;font-size: 2vh;font-weight: 700;letter-spacing: 0.1px;color: #304c44;" id="preview-titre">{{ campagne.titre }}</h3>
            <div class="row" style="margin-left: 0;">
                <p style="font-size: 3.084vh;line-height: 0.5;font-weight: 900;color: #304c44; margin-right: 20px">€ <span style="color: #54c2a5" id="preview-promotion">{{ campagne.prixPromotion }} </span> </p>
                <p style="font-size: 2.7vh;line-height: 0.5;font-weight: 200;color: lightgrey; text-decoration: line-through">€ <span id="valeurProduit">{{ campagne.valeurProduit}}</span> </p>
            </div>
            <p style="color: lightgrey;line-height: 1;letter-spacing: -0.014em;font-weight: 900;font-size: 1.211vh; width: 80%" id="preview-description">
                {{ campagne.description }} </p> <p style="/*! position: absolute; */top: 300px;font-size: 1vw;color: #304c44;left: 80px;line-height: 1.2;font-weight: 700;">Objectif participatif</p>
            <div class="barres" style="width: 80%;">
                <div style="position: absolute;width: 80%;height: 15px;background-color: #edeef0;border-radius: 20px;/*! top: 370px; *//*! left: 80px; */">
                </div>

                <div style="position: absolute;width: {{ campagne.pourcentageParticipation80 }}%;height: 15px;background-color: #5be7c4;border-radius: 20px;/*! top: 370px; *//*! left: 80px; */">
                </div>
            </div>
            <div style="padding-top: 30px;"></div>
            <div class="imagesParticipations" style="position: relative;/*! left: 80px; */">
                <div style="width: 4vh;height: 4vh;border-radius: 50px;background-color: white;border: 1px solid gray; position:absolute; background-image: url('{{ asset('Ellipse.png') }}') ; background-size: contain;">
                </div>
                <div style="width: 4vh;height: 4vh;border-radius: 50px;background-color: white;border: 1px solid gray;position: absolute;left: 8%; background-image: url('{{ asset('Ellipse(1).png') }}') ; background-size: contain;">
                </div>
                <div style="width: 4vh;height: 4vh;border-radius: 50px;background-color: white;border: 1px solid gray;position: absolute;left: 16%; background-image: url('{{ asset('Ellipse(2).png') }}') ; background-size: contain;">
                </div>
                <div style="width: 4vh;height: 4vh;border-radius: 50px;background-color: white;border: 1px solid gray;position: absolute;left: 24%; background-image: url('{{ asset('Ellipse(3).png') }}') ; background-size: contain;">
                </div>
                <div style="width: 4vh;height: 4vh;border-radius: 50px;background-color: white;border: 1px solid gray;position: absolute;left: 32%;padding: 2%;font-size: 1.2vh;color: white;background-color: #5ae5c2;font-weight: 600;">
                    +<d id="nbParticipantsPreview">{{ campagne.nombreParticipations }}</d>
                </div>
            </div>

            <div class="text-center" style="padding-top: 7vh;font-size: 1.551vh">
                <p class="btn" style="min-width : 100px ; width: 70%;filter: drop-shadow(0 10px 1rem lightgray);"> Participer </p>
            </div>

        </div>
    </div>
</div>
