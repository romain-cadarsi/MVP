<div class="post-item border paddedPostItem no-absolute">
    <div class="post-image">
        <div>
            <p class="card-product-discount">-{{ campagne.discount }}%</p>
        </div>
        <a href="{{ path('viewCampagne',{id: campagne.id}) }}">
            <div style="background-image:url('{{ asset(campagne.logo.asset) }}') " class="imageCard"></div>
        </a>
    </div>
    <div class="post-item-description card card-padded" style="width: 90% !important;">
        <div class="header-card">
            <p class="card-product-price green prix">â‚¬{{ campagne.prixPromotion }}</p>
            <a href="{{ path('viewCampagne',{id: campagne.id}) }}" class=""><p class="darkblue card-product-title">{{ campagne.titre }}</p>
            </a>

        </div>
        <div>
            <div class="participationCount">
                <p style="float: right; margin-bottom: unset" class="grey">{{ campagne.nombreParticipations }}/{{ campagne.nombreParticipants }}</p>
                <p  style=" margin-bottom: 2px" href="#" class="grey" >{{ campagne.nomVendeur }}</p>
            </div>
<div>
            <div class="barres" style="width: 80%; height: 20px;">
                <div style="position: absolute;width: 80%;background-color: #F2F3F5;border-radius: 20px;/*! top: 370px; *//*! left: 80px; */">
                </div>

                <div style="position: absolute;width:{{ campagne.getPourcentageParticipation80 }}%;background-color: #5be7c4;border-radius: 20px;/*! top: 370px; *//*! left: 80px; */">
                </div>
            </div>
</div>

            <div class="imagesParticipations" style="position: relative;height: 30px/*! left: 80px; */">
                {% for participation in campagne.participations | slice(-4) %}
                    <div class="imgparticipation{{ loop.index0 }}" style=" background-image: url('{{ asset(participation.participant.pictureUrl) }}')">
                    </div>
                    {% if loop.index == 4 %}
                        <div class=" imgparticipation4" style= "color: white;background-color: #5ae5c2">
                            <span id="nbParticipantsPreview" class="center">+{{ campagne.nombreParticipations }}</span>
                        </div>
                    {% endif %}
                {% endfor %}

            </div>
        </div>


    </div>
</div>