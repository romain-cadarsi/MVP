{% extends 'base.html.twig' %}

{% block bodycontent %}
<section class="fullscreen" ><div class="parallax-container img-loaded" data-velocity="-.140"></div>
    <div class="container">
        <div>
            <div class="row card">
                <div class="col-lg-5 center p-50 background-white b-r-6">
                    <form method="post">
                        {% if error %}
                            <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                        {% endif %}

                        {% if app.user %}
                            <div class="mb-3">
                               Vous êtes connecté sous l'email {{ app.user.username }}, <a href="{{ path('app_logout') }}">Se déconnecter</a>
                            </div>
                        {% endif %}

                        <h1 class="h3 mb-3 font-weight-normal">Connectez vous à votre compte commercant pour continuer</h1>
                        <label for="inputEmail">Email</label>
                        <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" required autofocus>
                        <label for="inputPassword">Telephone</label>
                        <input type="password" name="password" id="inputPassword" class="form-control" required>

                        <input type="hidden" name="_csrf_token"
                               value="{{ csrf_token('authenticate') }}"
                        >

                        {#
                        Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
                        See https://symfony.com/doc/current/security/remember_me.html

                        <div class="checkbox mb-3">
                            <label>
                                <input type="checkbox" name="_remember_me"> Remember me
                            </label>
                        </div>
                        #}

                        <button class="btn btn-lg btn-primary" type="submit">
                            Se connecter
                        </button>
                    </form>
                    <p class="small">Vous n'avez pas de compte commercant ? <a href="#">Créez le votre</a>
                    </p>
                </div>
            </div>
        </div>
    </div>
</section>

{% endblock %}
